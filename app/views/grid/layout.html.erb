<div>
    Generation: <%= @generation %>
    <br>
    <% @size.each do |el| %>
        <span><%= el %></span>
    <% end %>
    <br>
    <table>
        <% @matrix.each do |row| %>
        <tr>
            <% row.each do |el| %>
              <td style="width:30px;height=30px"> <%= el == 1 ? '*' : '.' %> </td>
            <% end %>
        </tr>
        <% end %>
    </table>
    <%= button_tag 'Start', onclick: 'startControllerPolling("nextLink")'  %>
    <%= button_tag 'Stop', onclick: 'stopControllerPolling()'  %>
    <%= link_to 'Next', compute(generation: @generation, size: @size, matrix: @matrix), id: "nextLink", style: "visibility: hidden" %>
</div>
<%= javascript_include_tag 'poller' %>